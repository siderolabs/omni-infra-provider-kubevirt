{
  "type": "object",
  "properties": {
    "cores": {
      "type": "integer",
      "minimum": 1
    },
    "memory": {
      "type": "integer",
      "minimum": 2048
    },
    "architecture": {
      "enum": [
        "amd64",
        "arm64"
      ]
    },
    "disk_size": {
      "type": "integer",
      "minimum": 10,
      "description": "In GB"
    },
    "storage_class_name": {
      "type": "string",
      "description": "name of the kubernetes storage class used for volumes"
    },
    "network_binding": {
      "enum": [
        "bridge",
        "passt"
      ],
      "default": "bridge"
    }
  },
  "required": [
    "cores",
    "memory",
    "architecture",
    "disk_size"
  ]
}
