{
  "type": "object",
  "properties": {
    "cores": {
      "type": "integer",
      "minimum": 1
    },
    "memory": {
      "type": "integer",
      "minimum": 2048
    },
    "architecture": {
      "enum": ["amd64", "arm64"]
    },
    "disk_size": {
      "type": "integer",
      "minimum": 5,
      "description": "In GB"
    },
    "storage_class_name": {
      "type": "string",
      "description": "StorageClasName to use for the DataVolume (optional)"
    },
    "network_binding": {
      "enum": ["bridge", "passt"],
      "default": "bridge"
    }
  },
  "required": [
    "cores",
    "memory",
    "architecture",
    "disk_size"
  ]
}
