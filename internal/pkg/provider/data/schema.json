{
  "type": "object",
  "properties": {
    "cores": {
      "type": "integer",
      "minimum": 1
    },
    "memory": {
      "type": "integer",
      "minimum": 2048
    },
    "architecture": {
      "enum": ["amd64", "arm64"]
    },
    "disk_size": {
      "type": "integer",
      "minimum": 5,
      "description": "In GB"
    },
    "storage_class_name": {
      "type": "string",
      "description": "StorageClasName to use for the DataVolume (optional)"
    },
    "network_binding": {
      "enum": ["bridge", "passt"],
      "default": "bridge"
    },
    "tolerations": {
      "type": "string",
      "description": "Tolerations for the VirtualMachine encoded as a JSON array",
      "additionalProperties": {
        "type": "string"
      }
    },
    "vm_labels": {
      "type": "object",
      "description": "Custom labels to apply to the VirtualMachine resource",
      "additionalProperties": {
        "type": "string"
      }
    }
  },
  "required": [
    "cores",
    "memory",
    "architecture",
    "disk_size"
  ]
}
